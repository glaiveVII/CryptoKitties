<p id="notice"><%= notice %></p>

<h1>kitties</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitty.each do |kitty| %>
      <tr>
        <td><%= kitty.first_name %></td>
        <td><%= link_to 'Show', kitty %></td>
        <td><%= link_to 'Edit', edit_kitty_path(kitty) %></td>
        <td><%= link_to 'Destroy', kitty, method: :delete, data: { confirm: 'Are you sure you want to delete this lovely kitty ???' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

